{% form_theme form 'MsiCmfBundle:Form:form.html.twig' %}
{% if admin.object.id %}
    <ul id="myTab" class="nav nav-tabs">
        <li class="active"><a href="#general" data-toggle="tab">{{ 'Main'|trans }}</a></li>
        <li><a href="#advanced" data-toggle="tab">{{ 'Settings'|trans }}</a></li>
    </ul>

    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="general">
            {{ form_row(form.name) }}
            {{ form_row(form.settings.slot) }}
            {{ form_row(form.pages) }}
        </div>
        <div class="tab-pane fade" id="advanced">
            {{ form_rest(form) }}
        </div>
    </div>
{% else %}
    {{ form_widget(form) }}
{% endif %}
